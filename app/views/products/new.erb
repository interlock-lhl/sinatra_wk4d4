<h1>New Product</h1>
<% if @product.errors.any? %>
<ul>
  <% @product.errors.full_messages.each do |e| %>
    <li><%= e %></li>
  <% end %>
</ul>
<% end %>
<form method="post" action="/products">
  <div class="form-group">
   <label for="productTitle">Title</label>
   <input name="product[title]" class="form-control" id="productTitle" placeholder="Title">
 </div>

 <div class="form-group">
  <label for="productSKU">SKU</label>
  <input name="product[sku]" class="form-control" id="productSKU" placeholder="SKU">
</div>

<div class="form-group">
 <label for="productPrice">Price</label>
 <input name="product[price]" class="form-control" id="productPrice" placeholder="$$$">
</div>
  <input type="submit" class="btn btn-default">
</form>
